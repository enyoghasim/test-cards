{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2016", "esnext"],
    "outDir": "./dist",
    "rootDir": "./api",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": ["api/**/*"],
  "exclude": ["tests/**/*"]
}
